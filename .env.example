# Facilities Management AI Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# GOOGLE AI & CLOUD SERVICES
# =============================================================================

# Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Credentials (path inside container)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================

# Gmail credentials (if using email notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# SMTP settings (if using custom email provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application port
PORT=8000

# Python path (for imports)
PYTHONPATH=/app

# Environment (development/production)
ENVIRONMENT=development

# =============================================================================
# OPTIONAL: ADDITIONAL SERVICES
# =============================================================================

# Database URL (if you migrate from CSV to database)
# DATABASE_URL=postgresql://user:password@localhost:5432/facilities_db

# Redis URL (if you add caching)
# REDIS_URL=redis://localhost:6379/0

# Logging level
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for sessions (generate a random string)
SECRET_KEY=your_secret_key_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# FEATURES FLAGS (Optional)
# =============================================================================

# Enable/disable specific features
ENABLE_VOICE_CALLS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_EMERGENCY_ALERTS=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit this file with real values to version control
# 2. Each team member needs their own .env file
# 3. Use different values for development/staging/production
# 4. Keep API keys secure and rotate them regularly